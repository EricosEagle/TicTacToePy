#: kivy 1.11.0
#: import sysexit sys.exit

<Cell@Button>:   
    background_color: 1, 1, 1, 1
    font_size: 144
    background_normal: ''
    background_down: ''

<MainMenu@Screen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Play'
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'play'
        Button:
            text: 'Settings'
            # on_release:
                # root.manager.transition.direction = 'right'
                # root.manager.current = 'settings'
        Button:
            text: 'Quit'
            on_release: sysexit(0)

<PlayMenu@Screen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Singleplayer'
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'sp'
        Button:
            text: 'Multiplayer'
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'mp'
        Button:
            text: 'Back'
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = 'menu'

